<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hello World" Height="300" Width="600">
    <Border Padding="2">
        <StackPanel>
            <Grid>


                <!--Input box-->
                <TextBlock Text="Enter Your Name:" FontWeight="Bold" Margin="5 10 0 0"/>
                <TextBox x:Name="inputbox" Margin="5,29,10,200"  Padding="2" />
                <!--Button-->
                <Button Content="Enter"  HorizontalAlignment="Left" Margin="244,64,0,0" VerticalAlignment="Top" Click="Button_Click" Height="28" Width="76"/>


            </Grid>
        </StackPanel>
    </Border>


</Window>
